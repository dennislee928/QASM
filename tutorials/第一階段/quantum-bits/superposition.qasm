// 使用 OpenQASM 2.0 語言
OPENQASM 2.0;
// 包含標準量子閘庫
include "qelib1.inc";

// 定義一個量子暫存器 q，包含 2 個量子位元
qreg q[2];
// 定義一個經典暫存器 c，包含 2 個經典位元
creg c[2];

// 對 q[0] 應用 Hadamard 閘，將其置於疊加態
// 這使得 q[0] 同時處於 |0⟩ 和 |1⟩ 狀態
h q[0];

// 對 q[1] 應用 Hadamard 閘，將其置於疊加態
// 這使得 q[1] 同時處於 |0⟩ 和 |1⟩ 狀態
h q[1];

// 測量 q[0] 並將結果存入 c[0]
// 測量會使 q[0] 坍縮為 |0⟩ 或 |1⟩
measure q[0] -> c[0];

// 測量 q[1] 並將結果存入 c[1]
// 測量會使 q[1] 坍縮為 |0⟩ 或 |1⟩
measure q[1] -> c[1];

// 結果分析：
// 由於 q[0] 和 q[1] 都處於疊加態，測量結果是隨機的
// 每次運行程式碼，c[0] 和 c[1] 的值可能不同
// print的部分由ibm/classiq等支援openqasm的量子電腦執行圖解